<script>
  function showTable(filter){
    document.getElementById('postTable').style.display = 'none';
    document.getElementById('inProgressTable').style.display = 'none';
    document.getElementById('upcomingTable').style.display = 'none';
    if (filter === 'post'){
      document.getElementById('postTable').style.display = 'block';
    }
    else if (filter === 'inProgress'){
      document.getElementById('inProgressTable').style.display = 'block';
    }
    else if (filter === 'upcoming'){
      document.getElementById('upcomingTable').style.display = 'block';
    }
  }
</script>

